{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-I${fileDirname}/chirp",
                "-I${fileDirname}/iir_filter",
                "-I${fileDirname}/pid_controller",
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}/*.cpp",
                "${fileDirname}/chirp/*.cpp",
				"${fileDirname}/chirp/*.c",
                "${fileDirname}/iir_filter/*.cpp",
                "${fileDirname}/iir_filter/*.c",
                "${fileDirname}/pid_controller/*.cpp",
                "${fileDirname}/pid_controller/*.c",
                "-o",
                "${fileDirname}/BUILD/main.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}